# Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Application
ENVIRONMENT=production
DEBUG=false

# Database
# PostgreSQL connection string for production
DATABASE_URL=postgresql://user:password@host:5432/pravda_market

# Security
# CRITICAL: Generate a new secret for production!
# python -c "import secrets; print(secrets.token_urlsafe(32))"
TELEGRAM_BOT_TOKEN=your_production_bot_token_here
ADMIN_TOKEN=your_admin_secret_token_here

# CORS
# Frontend URL for production
CORS_ORIGINS=["https://your-frontend-domain.com","https://your-telegram-mini-app.t.me"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # Use JSON for production logs

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=60/minute

# Health Checks
HEALTH_CHECK_ENABLED=true

# Monitoring (optional)
SENTRY_DSN=  # Add Sentry DSN for error tracking
SENTRY_ENVIRONMENT=production

# Alembic (Database Migrations)
# Run migrations before deployment:
# alembic upgrade head
ALEMBIC_AUTO_MIGRATE=false  # Manual migration recommended for production
